@page
@model HelpDeskTicketing.Web.Pages.CreateModel
@{
    ViewData["Title"] = "Nowe zgłoszenie";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="NewTicket.Title" class="control-label"></label>
                <input asp-for="NewTicket.Title" class="form-control" />
                <span asp-validation-for="NewTicket.Title" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NewTicket.Description" class="control-label"></label>
                <textarea asp-for="NewTicket.Description" class="form-control" rows="5"></textarea>
                <span asp-validation-for="NewTicket.Description" class="text-danger"></span>
            </div>

            @* <input type="hidden" asp-for="NewTicket.Priority" value="Medium" />
            <input type="hidden" asp-for="NewTicket.Status" value="New" /> *@

            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
                <a asp-page="/Index" class="btn btn-secondary">Anuluj</a>
            </div>
        </form>
    </div>
</div>
